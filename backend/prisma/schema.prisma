generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  SUPER_ADMIN
}

enum Gender {
  MEN
  WOMEN
  UNISEX
  KIDS_BOYS
  KIDS_GIRLS
  KIDS_UNISEX
}

enum ProductStatus {
  ACTIVE
  INACTIVE
  OUT_OF_STOCK
}

model User {
  id           String   @id @default(uuid())
  name         String?
  email        String   @unique
  password     String
  role         Role
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  refreshToken String?  @unique
}

model Product {
  id          Int           @id @default(autoincrement())
  name        String
  brand       String
  description String
  category    String
  gender      Gender
  sizes       String[]
  colors      String[]
  price       Float
  stock       Int
  soldCount   Int           @default(0)
  rating      Float?
  images      String[]
  isFeatured  Boolean       @default(false)
  status      ProductStatus @default(ACTIVE)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([gender])
  @@index([category])
  @@index([isFeatured])
}
